@page
@model RazorLibraryWebsite2.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="heading text-center">
        <h1>Delete Book @Model.Book.Title</h1>
    </div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Book</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Authour)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Authour.AuthorID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Publisher)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Publisher.PublisherID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.PublishDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.PublishDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Edition)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Edition)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.CoverUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.CoverUrl)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Book.ID" />
            <input type="submit" value="Delete" class="btn-danger btn" /> |
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
    </div>
