@page
@model RazorLibraryWebsite2.Pages.Publishers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="heading text-center">
        <h2>Library Publishers </h2>
    </div>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher[0].Address)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Publisher)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary " asp-route-id="@item.PublisherID">Edit</a> |
                        <a asp-page="./Details" class="btn btn-success bg-secondary" asp-route-id="@item.PublisherID">Details</a> |
                        <a asp-page="./Delete" class="btn btn-danger bg-danger" asp-route-id="@item.PublisherID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
