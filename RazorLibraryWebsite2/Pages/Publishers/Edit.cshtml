@page
@model RazorLibraryWebsite2.Pages.Publishers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="heading text-center">
        <h1>Edit Publisher @Model.Publisher.Name</h1>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Publisher.PublisherID" />
                <div class="form-group">
                    <label asp-for="Publisher.Name" class="control-label"></label>
                    <input asp-for="Publisher.Name" class="form-control" />
                    <span asp-validation-for="Publisher.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher.Address" class="control-label"></label>
                    <input asp-for="Publisher.Address" class="form-control" />
                    <span asp-validation-for="Publisher.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher.WebsiteUrl" class="control-label"></label>
                    <input asp-for="Publisher.WebsiteUrl" class="form-control" />
                    <span asp-validation-for="Publisher.WebsiteUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                     <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    </div>