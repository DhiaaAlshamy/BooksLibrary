@page
@model RazorLibraryWebsite2.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="heading text-center">
        <h2>Library Authors </h2>
    </div>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].Mobile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].DateOfBirth)
                </th> 
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Author)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                 
                    <td>
                        <a asp-page="./Edit"    class="btn btn-primary " asp-route-id="@item.AuthorID">Edit</a> |
                        <a asp-page="./Details" class="btn btn-success bg-secondary" asp-route-id="@item.AuthorID">Details</a> |
                        <a asp-page="./Delete"  class="btn btn-danger bg-danger" asp-route-id="@item.AuthorID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
